/* pages/edit/edit.wxss */
@import '/styles/iconfont.wxss';

.content{
  padding: 0 20rpx;
}
.edit{
  padding: 20rpx;
}
.edit-title{
  line-height: 50rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
  margin-bottom: 30rpx;
}
.edit-textarea{
  min-height: 100rpx;
}
/* 新建 */
.tag{
  display: flex;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
}
.tag picker{
  flex: 1;
}
.icon-tag1{
  margin-right: 10rpx;
  color: #000;
}

.img-item{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  width: 200rpx;
  margin: 0 20rpx 20rpx 0;
  border: 1rpx dotted #ccc;
  border-radius: 20rpx;
}
.img-list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
/* 底部按钮 */
.btn{
  position: fixed;
  bottom: 50rpx;
  left: 0;
  right: 0;
  width: 686rpx;
  line-height: 88rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 34rpx;
  font-weight: 400;
  color: #FFF;
  background-color: #1E8FF6;
  border-radius: 7.2rpx;
}