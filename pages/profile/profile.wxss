/* pages/profile/profile.wxss */
@import '/styles/iconfont.wxss';
page{
  padding: 20rpx;
  background-color: #EEF2F5;
  box-sizing: border-box;
}

.header{
  display: flex;
  align-items: center;
  height: 200rpx;
  padding: 30rpx 50rpx;
  background-color: #FFF;
  box-sizing: border-box;
}

.user-img{
  height: 130rpx;
  width: 130rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.username{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.username text:first-child{
  margin-bottom: 8rpx;
}

.icon-user{
  font-size: 90rpx;
  color: #E0E0E0;
}

.header>text:nth-child(2){
  flex: 1;
  margin: 0 50rpx;
  font-size: 36rpx;
  color: #333;
}
/* 列表 */
.list{
  margin-top: 20rpx;
  padding: 0 40rpx;
  background-color: #FFF;
}

.list-item{
  display: flex;
  align-items: center;
  height: 120rpx;
}

.list-item:not(:last-child) {
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
}

.list-item text:first-child{
  margin-right: 40rpx;
}

/* iconfont图标 */
.icon-article{
  color: #0176FE;
}
.icon-dianzan{
  color: #6CBE45;
}
.icon-xingxingxuanzhongzhuangtai{
  color: #FFC446;
}
.icon-see, .icon-password{
  color: #ABB5BF;
}

/* 退出登录 */
.logout{
  line-height: 120rpx;
  width: 712rpx;
  margin: 20rpx auto 0;
  border: 1rpx solid #E5E5E5;
  font-size: 32rpx;
  color: #EE4B4B;
  text-align: center;
  background-color: #FFF;
  box-sizing: border-box;
}