/* pages/profile/childPages/momentList/momentList.wxss */
@import '/styles/iconfont.wxss';

/* -------------------------列表----------------------- */
.list{
  margin-top: 20rpx;
 
}
.list-label{
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
}
.list-label-item:not(:last-child) {
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
}
.list-label-item{
  height: 32rpx;
}

.list-item{
  padding: 36rpx 48rpx;
  background-color: #FFF;
}
.list-item:not(:last-child) {
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
}
.list-item-info{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #b2bac2;
}
.info-dot{
  margin: 0 10rpx;
}


.list-item-feedback{
  display: flex;
  color: #B2BAC2;
}
.list-item-feedback view{
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border: 1rpx solid #edeeef;
}
.list-item-introduction{
  margin: 12rpx 0 24rpx;
  font-weight: bold;
  color: rgb(46, 49, 53);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.icon-dianzan, .icon-pinglun{
  margin-right: 10rpx;
}

.avalar-img{
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.info-label{
  flex: 1;
}

.icon-edit, .icon-delete{
  font-size: 40rpx;

}
.icon-edit{
  margin-right: 40rpx;
  margin-top: 8rpx;
}

/* 占位空图片 */
.empty{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 70vh;
  width: 100vw;
  align-items: center;
  color: #9F9F9F;
}
.empty-img{
  width: 200rpx;
  height: 108rpx;
  margin-bottom: 30rpx;
}