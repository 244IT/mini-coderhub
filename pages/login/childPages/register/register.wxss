/* pages/register/register.wxss */
.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50rpx;
}

.logo{
  height: 240rpx;
  width: 240rpx;
}

/* 用户名密码表单 */
.input-list{
  width: 100%;
  margin: 50rpx 0 20rpx;
}
.input-item{
  display: flex;
  align-items: center;
  height: 120rpx;
  line-height: 120rpx;
  width: 100%;
  padding: 0 40rpx;
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
}
/* 按钮 */
.btn{
  line-height: 96rpx;
  width: 690rpx;
  margin: 10rpx auto 30rpx;
  font-size: 36rpx;
  color: #FFF;
  background-color: #0181FD;
  border-radius: 10rpx;
  text-align: center;
}
.btn-hover{
  color: #999;
  background-color: #EEE;
}