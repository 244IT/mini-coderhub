/* components/chh-moment-list/chh-moment-.wxss */
@import '/styles/iconfont.wxss';

.list-label{
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
}
.list-label-item:not(:last-child) {
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
}
.list-label-item{
  height: 32rpx;
}

.avalar-img{
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.list-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 48rpx;
  background-color: #FFF;
  box-sizing: border-box;
}

.list-img{
  height: 150rpx;
  width: 150rpx;
  border-radius: 16rpx;
}
.list-item:not(:last-child) {
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
}
.list-item-info{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #b2bac2;
}
.info-dot{
  margin: 0 10rpx;
}

.list-item-feedback{
  display: flex;
  color: #B2BAC2;
}
.favor, .comment{
  display: flex;
  align-items: center;
  padding: 4rpx 20rpx;
  border: 1rpx solid #edeeef;
}
.list-item-introduction{
  margin: 12rpx 0 24rpx;
  font-weight: bold;
  color: rgb(46, 49, 53);
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.icon-dianzan, .icon-pinglun{
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
}