/* components/chh-search/index.wxss */
@import '/styles/iconfont.wxss';
/* -----------------------头部------------------------ */
.header{
  position: relative;
  display: flex;
  align-items: center;
  height: 120rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
  background-color: #FFF;
}

.icon-shixinjiantou-xiangshang-copy{
  margin-left: 8rpx;
  font-size: 26rpx;
}
.title{
  margin: 0 30rpx;
  color: #007fff;
}
.search-input{
  width: 500rpx;
  height: 80rpx;
  padding: 0 20rpx 0 70rpx;
  border-bottom: 1rpx solid rgba(178, 186, 194, 0.1);
  background-color: #EDEDED;
  border-radius: 8rpx;
}

.icon-search{
  position: absolute;
  left: 50rpx;
  font-size: 38rpx;
  color: #666;
}

.icon-set{
  margin: 0 10rpx 0 20rpx;
  font-size: 46rpx;
  color: #A9B6BD;
}

.tag{
  display: flex;
  align-items: center;
  color: #A9B6BD;
}

.tag-text{
  white-space: nowrap;
}